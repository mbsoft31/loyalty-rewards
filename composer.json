{
    "name": "mbsoft31/loyalty-rewards",
    "description": "A flexible loyalty rewards system for PHP applications",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": "^8.1",
        "psr/log": "^3.0",
        "psr/event-dispatcher": "^1.0",
        "ramsey/uuid": "^4.7"
    },
    "require-dev": {
        "pestphp/pest": "^2.0",
        "mockery/mockery": "^1.6",
        "phpunit/phpunit": "^10.0",
        "symfony/var-dumper": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "LoyaltyRewards\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LoyaltyRewards\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "pest",
        "test-coverage": "pest --coverage"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
